{{#ui-autocomplete
  id="input-autocomplete"
  placeholder="Search for an upcoming EDM event in SF"
  value=value
  on-change="setValue"
  inline=true
  items=filteredResults as |item|}}
  {{#ui-option value=item.title}}
    {{search-result event=item}}
  {{/ui-option}}
{{else}}
  {{ui-option class="no-results" value="No Results"}}
{{/ui-autocomplete}}
